<h1>Create a new place</h1>

<form action="/places" method="post">

    <div class="form-group">
        <label for="place_name">Name</label>
        <input type="text" class="form-control" id="place_name" placeholder="Place Name" name="place[name]">
    </div>

    <div class="form-group">
        <label for="city">City</label>
        <input type="text" class="form-control" id="city" placeholder="City" name="place[city]">
    </div>

    <div class="form-group">
        <label for="country">Country</label>
        <input type="text" class="form-control" id="country" placeholder="Country" name="country[name">
    </div>

    <button type="submit" class="btn btn-primary">Create Place</button>
</form>